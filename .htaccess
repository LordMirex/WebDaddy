# .htaccess – Production version (replaces router.php)
DirectoryIndex index.php index.html
Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # ------------------------------------------------------------------
    # 1. Force HTTPS + www/non-www (optional – uncomment the version you want)
    # ------------------------------------------------------------------
    # Option A: Force HTTPS + keep whatever www/non-www the visitor used
    # RewriteCond %{HTTPS} off [OR]
    # RewriteCond %{HTTP_HOST} ^www\. [NC]
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

    # Option B: Force HTTPS + non-www (most common for SEO)
    RewriteCond %{HTTPS} off [OR]
    RewriteCond %{HTTP_HOST} ^www\. [NC]
    RewriteRule ^ https://example.com%{REQUEST_URI} [R=301,L,NE]

    # ------------------------------------------------------------------
    # 2. Remove trailing slashes (except for real directories)
    # ------------------------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.+)/$ /$1 [R=301,L]

    # ------------------------------------------------------------------
    # 3. Block direct access to sensitive folders (same as your router.php)
    # ------------------------------------------------------------------
    RewriteRule ^(includes|database|uploads/private)/ - [F,L]

    # ------------------------------------------------------------------
    # 4. Serve existing files/folders directly (images, css, js, admin, api, etc.)
    # ------------------------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # ------------------------------------------------------------------
    # 5. Sitemap (both /sitemap and /sitemap.xml)
    # ------------------------------------------------------------------
    RewriteRule ^sitemap\.xml$ sitemap.php [L]
    RewriteRule ^sitemap/?$ sitemap.php [L]

    # ------------------------------------------------------------------
    # 6. Template slug routing → template.php?slug=whatever
    #    Exactly the same logic as your PHP router:
    #    - only lowercase/uppercase letters, numbers, hyphens and underscores
    #    - excludes admin, affiliate, assets, api, uploads, mailer, index, template, sitemap
    # ------------------------------------------------------------------
    RewriteCond %{REQUEST_URI} !^/(admin|affiliate|assets|api|uploads|mailer|index|template|sitemap)(\.php)?/?$ [NC]
    RewriteCond %{REQUEST_FILENAME} !\.(php|css|js|jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|otf|pdf|zip|rar|xml|json)$ [NC]
    RewriteRule ^([a-zA-Z0-9_-]+)/?$ template.php?slug=$1 [QSA,L]

    # ------------------------------------------------------------------
    # 7. Everything else → index.php (SPA-style fallback)
    # ------------------------------------------------------------------
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# ----------------------------------------------------------------------
# Security: Deny access to sensitive file types
# ----------------------------------------------------------------------
<FilesMatch "\.(env|sql|bak|log|ini|conf|dist|yml|yaml|sh|bat|md|git|htaccess|php~)$">
    Require all denied
</FilesMatch>

# ----------------------------------------------------------------------
# Security headers
# ----------------------------------------------------------------------
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
    Header always set Content-Security-Policy "default-src 'self' https://cdn.jsdelivr.net https://wa.me; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https: blob:; font-src 'self' https://cdn.jsdelivr.net; frame-ancestors 'self';"
</IfModule>

# ----------------------------------------------------------------------
# Aggressive caching for static assets (1 year + immutable)
# ----------------------------------------------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"

    ExpiresByType text/css                      "access plus 1 year"
    ExpiresByType application/javascript        "access plus 1 year"
    ExpiresByType image/svg+xml                 "access plus 1 year"
    ExpiresByType image/x-icon                  "access plus 1 year"
    ExpiresByType image/webp                    "access plus 1 year"
    ExpiresByType image/png                     "access plus 1 year"
    ExpiresByType image/jpeg                    "access plus 1 year"
    ExpiresByType image/gif                     "access plus 1 year"
    ExpiresByType video/mp4                     "access plus 1 year"
    ExpiresByType video/webm                    "access plus 1 year"
    ExpiresByType font/woff2                    "access plus 1 year"
    ExpiresByType font/woff                     "access plus 1 year"
    ExpiresByType font/ttf                      "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|woff2?|ttf|otf|svg|png|jpe?g|gif|webp|ico|mp4|webm)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # No caching for dynamic pages
    <FilesMatch "\.(php|html?)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>

# ----------------------------------------------------------------------
# Gzip / Brotli compression
# ----------------------------------------------------------------------
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# ----------------------------------------------------------------------
# PHP settings (only works if your host allows PHP overrides in .htaccess)
# ----------------------------------------------------------------------
<IfModule mod_php.c>
    php_value upload_max_filesize 150M
    php_value post_max_size 160M
    php_value max_execution_time 300
    php_value memory_limit 256M
</IfModule>
