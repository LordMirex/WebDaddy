{
  "name": "webdaddy-empire-tests",
  "version": "1.0.0",
  "description": "Automated browser tests for WebDaddy Empire platform",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:admin": "playwright test --grep @admin",
    "test:uploads": "playwright test --grep @uploads",
    "test:affiliate": "playwright test --grep @affiliate",
    "test:security": "playwright test --grep @security",
    "report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "playwright": "^1.48.0"
  },
  "engines": {
    "node": ">=18"
  }
}
